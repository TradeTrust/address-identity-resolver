{
  "name": "@govtechsg/address-identity-resolver",
  "version": "0.0.0-development",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "main": "build/index.js",
  "module": "build/esm/index.js",
  "types": "build/esm/index.d.ts",
  "dependencies": {
    "axios": "^0.27.2",
    "axios-extensions": "^3.1.3",
    "debug": "^4.3.7",
    "ethers": "^5.7.2",
    "papaparse": "^5.3.0",
    "query-string": "^7.1.3",
    "use-persisted-state": "^0.3.0"
  },
  "peerDependencies": {
    "react": ">=16.11.0"
  },
  "scripts": {
    "build": "NODE_ENV=production webpack --mode production && tsc --module es6 --declaration --outDir build/esm",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --ci",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "precommit": "run-s lint test build",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@eslint/compat": "^1.1.1",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.11.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^8.0.0",
    "@types/debug": "4.1.5",
    "@types/jest": "^29.5.13",
    "@types/node": "^14.14.5",
    "@types/papaparse": "^5.2.3",
    "@types/react": "16.9.2",
    "@types/use-persisted-state": "^0.3.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.2.1",
    "eslint": "^9.11.1",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.36.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc-04bd67a4-20240924",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "react": "^16.11.0",
    "react-component-component": "1.2.1",
    "react-dom": "16.9.0",
    "react-frame-component": "^4.1.1",
    "react-test-renderer": "^16.13.1",
    "semantic-release": "^22.0.0",
    "typescript": "^4.9.5",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0",
    "webpack-dev-server": "^5.0.0"
  },
  "license": "Apache-2.0",
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-nullish-coalescing-operator",
      "@babel/plugin-proposal-optional-chaining"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "env": {
      "browser": true,
      "jest": true
    },
    "files": [
      "**/*.ts",
      "**/*.tsx"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:jest/all",
      "plugin:prettier/recommended",
      "prettier"
    ],
    "plugins": [
      "react-hooks"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "@typescript-eslint/explicit-function-return-type": [
        "warn",
        {
          "allowExpressions": true,
          "allowTypedFunctionExpressions": true
        }
      ],
      "@typescript-eslint/no-explicit-any": "off",
      "react/prop-types": "off",
      "react/self-closing-comp": "error",
      "jest/prefer-expect-assertions": "off",
      "array-callback-return": "error",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "error",
      "jest/prefer-strict-equal": "off",
      "jest/no-hooks": "off"
    }
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build"
    ],
    "coverageDirectory": "coverage",
    "testEnvironment": "jest-environment-jsdom"
  },
  "prettier": {
    "printWidth": 120,
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "options": {
          "parser": "babel-ts"
        }
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TradeTrust/address-identity-resolver.git"
  }
}
